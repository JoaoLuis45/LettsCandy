<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LettsCandy.Paginas.ClientesPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:paginas="clr-namespace:LettsCandy.Paginas"
    Title="Clientes">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="FrameCardStyle" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="#ffffff" />
                <Setter Property="Padding" Value="2" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="HasShadow" Value="True" />
                <Setter Property="Margin" Value="0,0,0,10" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Image
                Aspect="AspectFit"
                HeightRequest="150"
                SemanticProperties.Description="clientes"
                Source="clientes.png" />
            <Button
                BackgroundColor="#FF0F10"
                Clicked="NovoClicked"
                FontAttributes="Bold"
                HorizontalOptions="FillAndExpand"
                Text="Novo Cliente" />
            <Label
                FontAttributes="Bold"
                FontSize="20"
                HorizontalOptions="Start"
                Text="Listagem de clientes"
                TextColor="grey" />

            <StackLayout
                HorizontalOptions="FillAndExpand"
                Orientation="Horizontal"
                Spacing="5">
                <Label
                    FontAttributes="Bold"
                    FontSize="12"
                    HorizontalOptions="Start"
                    Text="Quantidade de Clientes:"
                    TextColor="grey" />
                <Label
                    x:Name="LabelQtdClientes"
                    FontAttributes="Bold"
                    FontSize="12"
                    HorizontalOptions="Start"
                    TextColor="grey" />
            </StackLayout>

            <CollectionView x:Name="ClientesCollection">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Style="{StaticResource FrameCardStyle}">
                            <StackLayout
                                Margin="0,0,0,10"
                                Padding="10"
                                Orientation="Horizontal">
                                <StackLayout
                                    Margin="10,0,0,0"
                                    HorizontalOptions="FillAndExpand"
                                    Spacing="5">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="Medium"
                                        HorizontalOptions="Start"
                                        Text="{Binding Nome}" />
                                    <Label HorizontalOptions="Start" Text="{Binding Telefone}" />
                                    <Label
                                        FontAttributes="Italic"
                                        FontSize="13"
                                        HorizontalOptions="Start"
                                        Text="{Binding Obs}" />
                                </StackLayout>
                                <StackLayout
                                    Orientation="Horizontal"
                                    Spacing="5"
                                    VerticalOptions="Center">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="13"
                                        Text="Situação"
                                        TextColor="LightGrey" />
                                    <Label
                                        FontAttributes="Bold"
                                        x:Name="LblSituacao"
                                        FontSize="13"
                                        TextColor="#FF0F10"
                                        Text="{Binding SituacaoCliente}"
                                         />
                                </StackLayout>
                            </StackLayout>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type paginas:ClientesPage}}, Path=NavigateToClientesSalvarCommand}" CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>

    </ScrollView>

</ContentPage>
