<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LettsCandy.Paginas.RemessasSalvarPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:paginas="clr-namespace:LettsCandy.Paginas"
    Title="Salvar Remessa">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="FrameCardStyle" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="#ffffff" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="HasShadow" Value="True" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="0,0" Spacing="25">
            <Image
                Aspect="AspectFit"
                HeightRequest="150"
                SemanticProperties.Description="Salvar Remessa"
                Source="boxes.png" />
            <Frame
                Padding="0"
                BackgroundColor="Transparent"
                BorderColor="Transparent">
                <StackLayout Padding="20">
                    <Frame
                        Margin="0,0,0,10"
                        Padding="0"
                        CornerRadius="2">
                        <Entry
                            x:Name="DescricaoEntry"
                            BackgroundColor="White"
                            Placeholder="Nome"
                            PlaceholderColor="grey"
                            Text="{Binding Descricao}"
                            TextColor="Black" />
                    </Frame>

                    <Frame
                        Margin="0,0,0,10"
                        Padding="0"
                        CornerRadius="2">
                        <Picker
                            x:Name="SituacaoRemessaPicker"
                            BackgroundColor="White"
                            SelectedItem="{Binding SituacaoRemessa}"
                            TextColor="Black">
                            <Picker.ItemsSource />
                        </Picker>
                    </Frame>

                    <Frame
                        Padding="0"
                        BackgroundColor="Transparent"
                        BorderColor="Transparent">
                        <StackLayout>
                            <Label
                                FontAttributes="Bold"
                                FontSize="18"
                                HorizontalOptions="Start"
                                Text="Listagem de Produtos"
                                TextColor="grey" />

                            <CollectionView x:Name="ProdutosCollection">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Frame
                                            Margin="0,10,0,0"
                                            HorizontalOptions="FillAndExpand"
                                            Style="{StaticResource FrameCardStyle}"
                                            Padding="10">
                                            <StackLayout>
                                                <Label
                                                    FontAttributes="Bold"
                                                    FontSize="18"
                                                    HorizontalOptions="Start"
                                                    Text="Produto e Receita"
                                                    TextColor="grey" />
                                                <StackLayout Padding="10">
                                                    <StackLayout Padding="10" Orientation="Horizontal">
                                                        <Frame
                                                            Margin="0,0,5,10"
                                                            Padding="0"
                                                            HorizontalOptions="FillAndExpand"
                                                            CornerRadius="2">
                                                            <Label Text="" />
                                                            <Picker
                                                                Title="Escolha o produto"
                                                                BackgroundColor="White"
                                                                SelectedItem="{Binding Produtos}"
                                                                TextColor="Black">
                                                                <Picker.ItemDisplayBinding>
                                                                    <Binding Path="Nome" />
                                                                </Picker.ItemDisplayBinding>
                                                            </Picker>
                                                        </Frame>

                                                        <Frame
                                                            Margin="0,0,0,10"
                                                            Padding="0"
                                                            HorizontalOptions="FillAndExpand"
                                                            CornerRadius="2">
                                                            <Label Text="" />
                                                            <Picker
                                                                Title="Escolha a receita"
                                                                BackgroundColor="White"
                                                                SelectedItem="{Binding Receitas}"
                                                                TextColor="Black">
                                                                <Picker.ItemDisplayBinding>
                                                                    <Binding Path="Descricao" />
                                                                </Picker.ItemDisplayBinding>
                                                            </Picker>
                                                        </Frame>
                                                    </StackLayout>

                                                    <StackLayout
                                                        Margin="10,0,0,0"
                                                        HorizontalOptions="FillAndExpand"
                                                        Orientation="Horizontal"
                                                        Spacing="5">
                                                        <Label
                                                            FontAttributes="Bold"
                                                            FontSize="18"
                                                            HorizontalOptions="Start"
                                                            Text="Qtd do produto:"
                                                            TextColor="grey"
                                                            VerticalOptions="Center" />
                                                        <Frame
                                                            Margin="0,5,0,10"
                                                            Padding="0"
                                                            CornerRadius="2"
                                                            HorizontalOptions="Center"
                                                            WidthRequest="100">
                                                            <Entry
                                                                Margin="0"
                                                                BackgroundColor="White"
                                                                HeightRequest="35"
                                                                Keyboard="Numeric"
                                                                PlaceholderColor="grey"
                                                                Text="{Binding ProdutoQtd}"
                                                                TextColor="Black"
                                                                Unfocused="ProdutoQtdEntry_Unfocused" />
                                                        </Frame>
                                                    </StackLayout>


                                                    <Button
                                                        Margin="0,10,0,0"
                                                        Padding="0"
                                                        BackgroundColor="#FFFFFF"
                                                        BorderWidth="1"
                                                        Clicked="RemoverRemessaLigacaoClicked"
                                                        FontAttributes="Bold"
                                                        HeightRequest="20"
                                                        HorizontalOptions="Center"
                                                        ImageSource="delete.png"
                                                        TextColor="#FFFFFF" />
                                                </StackLayout>
                                            </StackLayout>
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>

                            <Button
                                Margin="0,10,0,0"
                                BackgroundColor="#FFFFFF"
                                BorderColor="#FF0F10"
                                BorderWidth="1"
                                Clicked="AdicionarItemClicked"
                                FontAttributes="Bold"
                                HorizontalOptions="FillAndExpand"
                                Text="+"
                                TextColor="#FF0F10" />

                        </StackLayout>
                    </Frame>
                    <Button
                        x:Name="ExcluirBtn"
                        Margin="0,10,0,0"
                        BackgroundColor="#FFFFFF"
                        BorderColor="#FF0F10"
                        BorderWidth="1"
                        Clicked="ExcluirClicked"
                        FontAttributes="Bold"
                        HorizontalOptions="FillAndExpand"
                        Text="Excluir"
                        TextColor="#FF0F10" />
                    <Button
                        Margin="0,10,0,0"
                        BackgroundColor="#FF0F10"
                        Clicked="SalvarClicked"
                        FontAttributes="Bold"
                        HorizontalOptions="FillAndExpand"
                        Text="Salvar" />
                </StackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
