<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LettsCandy.Paginas.EncomendasSalvarPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:paginas="clr-namespace:LettsCandy.Paginas"
    Title="Salvar Encomenda">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="FrameCardStyle" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="#ffffff" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="HasShadow" Value="True" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="0,0" Spacing="25">
            <Image
                Aspect="AspectFit"
                HeightRequest="150"
                SemanticProperties.Description="Salvar Encomenda"
                Source="encomenda.png" />
            <Frame
                Padding="0"
                BackgroundColor="Transparent"
                BorderColor="Transparent">
                <StackLayout Padding="20">
                    <Frame
                        Margin="0,0,0,10"
                        Padding="0"
                        CornerRadius="2">
                        <Entry
                            x:Name="DescricaoEntry"
                            BackgroundColor="White"
                            Placeholder="Nome"
                            PlaceholderColor="grey"
                            Text="{Binding Descricao}"
                            TextColor="Black" />
                    </Frame>

                    <Frame
                        Margin="0,0,0,10"
                        Padding="0"
                        CornerRadius="2">
                        <Picker
                            x:Name="ProdutosPicker"
                            Title=""
                            BackgroundColor="White"
                            SelectedIndexChanged="ClientesPicker_SelectedIndexChanged"
                            SelectedItem="{Binding Cliente}"
                            TextColor="Black">
                            <Picker.ItemDisplayBinding>
                                <Binding Path="Nome" />
                            </Picker.ItemDisplayBinding>
                        </Picker>
                    </Frame>

                    <Frame
                        Padding="0"
                        BackgroundColor="Transparent"
                        BorderColor="Transparent">
                        <StackLayout>
                            <Label
                                FontAttributes="Bold"
                                FontSize="18"
                                HorizontalOptions="Start"
                                Text="Listagem de produtos"
                                TextColor="grey" />

                            <CollectionView x:Name="ProdutosCollection">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Frame
                                            Margin="0,10,0,0"
                                            HorizontalOptions="FillAndExpand"
                                            Style="{StaticResource FrameCardStyle}">
                                            <StackLayout Padding="10">
                                                <StackLayout Padding="10" Orientation="Horizontal">
                                                    <StackLayout
                                                        Margin="10,0,0,0"
                                                        HorizontalOptions="FillAndExpand"
                                                        Spacing="5">
                                                        <Label
                                                            FontAttributes="Bold"
                                                            FontSize="16"
                                                            HorizontalOptions="Start"
                                                            Text="{Binding NomeProduto}" />
                                                    </StackLayout>
                                                    <StackLayout
                                                        Margin="10,0,0,0"
                                                        HorizontalOptions="FillAndExpand"
                                                        Orientation="Horizontal"
                                                        Spacing="5">
                                                        <Frame
                                                            Padding="0"
                                                            HasShadow="True"
                                                            HeightRequest="30"
                                                            HorizontalOptions="Center"
                                                            WidthRequest="30">
                                                            <Button
                                                                Padding="0"
                                                                BackgroundColor="White"
                                                                Clicked="DiminuirQtd"
                                                                CornerRadius="10"
                                                                FontAttributes="Bold"
                                                                FontSize="18"
                                                                HorizontalOptions="Center"
                                                                Text="-"
                                                                TextColor="red"
                                                                VerticalOptions="Center" />
                                                        </Frame>

                                                        <Border
                                                            HeightRequest="30"
                                                            Stroke="Grey"
                                                            StrokeThickness="1"
                                                            WidthRequest="30">
                                                            <Entry
                                                                Margin="0"
                                                                BackgroundColor="White"
                                                                FontSize="14"
                                                                HeightRequest="40"
                                                                HorizontalTextAlignment="Center"
                                                                Keyboard="Numeric"
                                                                Text="{Binding QtdProduto}"
                                                                TextColor="Black"
                                                                Unfocused="Entry_Unfocused" />
                                                        </Border>

                                                        <Frame
                                                            Padding="0"
                                                            HasShadow="True"
                                                            HeightRequest="30"
                                                            HorizontalOptions="Center"
                                                            WidthRequest="30">
                                                            <Button
                                                                Padding="0"
                                                                BackgroundColor="White"
                                                                Clicked="AumentarQtd"
                                                                CornerRadius="10"
                                                                FontAttributes="Bold"
                                                                FontSize="18"
                                                                HorizontalOptions="Center"
                                                                Text="+"
                                                                TextColor="red"
                                                                VerticalOptions="Center" />
                                                        </Frame>
                                                    </StackLayout>
                                                </StackLayout>

                                                <Frame
                                                    Padding="0"
                                                    BackgroundColor="Transparent"
                                                    BorderColor="Transparent"
                                                    HeightRequest="25"
                                                    HorizontalOptions="Center"
                                                    WidthRequest="25">
                                                    <Button
                                                        Margin="0,0,0,0"
                                                        Padding="0"
                                                        BackgroundColor="#FFFFFF"
                                                        BorderWidth="1"
                                                        Clicked="RemoverProdutoClicked"
                                                        FontAttributes="Bold"
                                                        HeightRequest="20"
                                                        HorizontalOptions="Center"
                                                        ImageSource="delete.png"
                                                        TextColor="#FFFFFF" />
                                                </Frame>

                                            </StackLayout>
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>

                            <Button
                                Margin="0,10,0,0"
                                BackgroundColor="#FFFFFF"
                                BorderColor="#FF0F10"
                                BorderWidth="1"
                                Clicked="AdicionarProdutoClicked"
                                FontAttributes="Bold"
                                HorizontalOptions="FillAndExpand"
                                Text="+"
                                TextColor="#FF0F10" />

                        </StackLayout>
                    </Frame>
                    <Button
                        x:Name="ExcluirBtn"
                        Margin="0,10,0,0"
                        BackgroundColor="#FFFFFF"
                        BorderColor="#FF0F10"
                        BorderWidth="1"
                        Clicked="ExcluirClicked"
                        FontAttributes="Bold"
                        HorizontalOptions="FillAndExpand"
                        Text="Excluir"
                        TextColor="#FF0F10" />
                    <Button
                        Margin="0,10,0,0"
                        BackgroundColor="#FF0F10"
                        Clicked="SalvarClicked"
                        FontAttributes="Bold"
                        HorizontalOptions="FillAndExpand"
                        Text="Salvar" />
                    <Button
                        x:Name="StatusBtn"
                        Margin="0,10,0,0"
                        BackgroundColor="#FF0F10"
                        Clicked="StatusBtnClicked"
                        FontAttributes="Bold"
                        HorizontalOptions="FillAndExpand" />
                </StackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
