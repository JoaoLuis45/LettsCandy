<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LettsCandy.Paginas.ComprasSalvarPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:paginas="clr-namespace:LettsCandy.Paginas"
    Title="Salvar Receita">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="FrameCardStyle" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="#ffffff" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="HasShadow" Value="True" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Image
                Aspect="AspectFit"
                HeightRequest="150"
                SemanticProperties.Description="Salvar Compra"
                Source="compras.png" />
            <Frame Style="{StaticResource FrameCardStyle}">
                <StackLayout Padding="20">
                    <Frame
                        Margin="0,0,0,10"
                        Padding="0"
                        CornerRadius="2">
                        <Entry
                            x:Name="DescricaoEntry"
                            BackgroundColor="LightCyan"
                            Placeholder="Nome"
                            PlaceholderColor="grey"
                            Text="{Binding Descricao}"
                            TextColor="Black" />
                    </Frame>

                    <Frame Padding="10" Style="{StaticResource FrameCardStyle}">
                        <StackLayout>
                            <Label
                                FontAttributes="Bold"
                                FontSize="18"
                                HorizontalOptions="Start"
                                Text="Listagem de itens"
                                TextColor="grey" />

                            <CollectionView x:Name="ItemsCollection">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Frame Margin="0,10,0,0" Style="{StaticResource FrameCardStyle}">
                                            <StackLayout Padding="10">
                                                <StackLayout Padding="10" Orientation="Horizontal">
                                                    <StackLayout
                                                        Margin="10,0,0,0"
                                                        HorizontalOptions="FillAndExpand"
                                                        Spacing="5">
                                                        <Label
                                                            FontAttributes="Bold"
                                                            FontSize="16"
                                                            HorizontalOptions="Start"
                                                            Text="{Binding NomeItem}" />
                                                    </StackLayout>
                                                    <StackLayout
                                                        Margin="10,0,0,0"
                                                        HorizontalOptions="FillAndExpand"
                                                        Orientation="Horizontal"
                                                        Spacing="5">
                                                        <Frame
                                                            Padding="0"
                                                            HasShadow="True"
                                                            HeightRequest="30"
                                                            HorizontalOptions="Center"
                                                            WidthRequest="30">
                                                            <Button
                                                                Padding="0"
                                                                BackgroundColor="White"
                                                                Clicked="DiminuirQtd"
                                                                CornerRadius="10"
                                                                FontAttributes="Bold"
                                                                FontSize="18"
                                                                HorizontalOptions="Center"
                                                                Text="-"
                                                                TextColor="red"
                                                                VerticalOptions="Center" />
                                                        </Frame>

                                                        <Border
                                                            HeightRequest="30"
                                                            Stroke="Grey"
                                                            StrokeThickness="1"
                                                            WidthRequest="30">
                                                            <Entry
                                                                Margin="0"
                                                                BackgroundColor="White"
                                                                FontSize="14"
                                                                HeightRequest="40"
                                                                HorizontalTextAlignment="Center"
                                                                Keyboard="Numeric"
                                                                Text="{Binding QtdItem}"
                                                                TextColor="Black"
                                                                Unfocused="Entry_Unfocused" />
                                                        </Border>

                                                        <Frame
                                                            Padding="0"
                                                            HasShadow="True"
                                                            HeightRequest="30"
                                                            HorizontalOptions="Center"
                                                            WidthRequest="30">
                                                            <Button
                                                                Padding="0"
                                                                BackgroundColor="White"
                                                                Clicked="AumentarQtd"
                                                                CornerRadius="10"
                                                                FontAttributes="Bold"
                                                                FontSize="18"
                                                                HorizontalOptions="Center"
                                                                Text="+"
                                                                TextColor="red"
                                                                VerticalOptions="Center" />
                                                        </Frame>
                                                    </StackLayout>
                                                </StackLayout>
                                                <StackLayout
                                                    Margin="10,0,0,0"
                                                    HorizontalOptions="FillAndExpand"
                                                    Orientation="Horizontal"
                                                    Spacing="5">
                                                    <Label
                                                        FontAttributes="Bold"
                                                        FontSize="18"
                                                        VerticalOptions="Center"
                                                        HorizontalOptions="Start"
                                                        Text="Valor do item:"
                                                        TextColor="grey" />
                                                    <Frame
                                                        Margin="0,5,0,10"
                                                        Padding="0"
                                                        HorizontalOptions="FillAndExpand"
                                                        CornerRadius="2">
                                                        <Entry
                                                            x:Name="ValorItemEntry"
                                                            BackgroundColor="LightCyan"
                                                            Keyboard="Numeric"
                                                            Placeholder="Nome"
                                                            HeightRequest="35"
                                                            Margin="0"
                                                            PlaceholderColor="grey"
                                                            Text="{Binding ValorItem}"
                                                            TextColor="Black"
                                                            Unfocused="ValorItemEntry_Unfocused" />
                                                    </Frame>
                                                </StackLayout>
                                            </StackLayout>
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>

                            <Button
                                Margin="0,10,0,0"
                                BackgroundColor="#FFFFFF"
                                BorderColor="#FF0F10"
                                BorderWidth="1"
                                Clicked="AdicionarItemClicked"
                                FontAttributes="Bold"
                                HorizontalOptions="FillAndExpand"
                                Text="+"
                                TextColor="#FF0F10" />

                        </StackLayout>
                    </Frame>
                    <Button
                        x:Name="ExcluirBtn"
                        Margin="0,10,0,0"
                        BackgroundColor="#FFFFFF"
                        BorderColor="#FF0F10"
                        BorderWidth="1"
                        Clicked="ExcluirClicked"
                        FontAttributes="Bold"
                        HorizontalOptions="FillAndExpand"
                        Text="Excluir"
                        TextColor="#FF0F10" />
                    <Button
                        Margin="0,10,0,0"
                        BackgroundColor="#FF0F10"
                        Clicked="SalvarClicked"
                        FontAttributes="Bold"
                        HorizontalOptions="FillAndExpand"
                        Text="Salvar" />
                </StackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
