<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LettsCandy.Paginas.ReceitasSalvarPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:paginas="clr-namespace:LettsCandy.Paginas"
    Title="Salvar Receita">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="FrameCardStyle" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="#ffffff" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="HasShadow" Value="True" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="0,0" Spacing="25">
            <Image
                Aspect="AspectFit"
                HeightRequest="150"
                SemanticProperties.Description="Salvar Receita"
                Source="receipt.png" />
            <Frame
                Padding="0"
                BackgroundColor="Transparent"
                BorderColor="Transparent">
                <StackLayout Padding="20">
                    <Frame
                        Margin="0,0,0,10"
                        Padding="0"
                        CornerRadius="2">
                        <Entry
                            x:Name="DescricaoEntry"
                            BackgroundColor="White"
                            Placeholder="Nome"
                            PlaceholderColor="grey"
                            Text="{Binding Descricao}"
                            TextColor="Black" />
                    </Frame>
                    <Frame
                        Margin="0,0,0,10"
                        Padding="0"
                        CornerRadius="2">
                        <Picker
                            x:Name="ProdutosPicker"
                            Title=""
                            BackgroundColor="White"
                            SelectedIndexChanged="ProdutosPicker_SelectedIndexChanged"
                            SelectedItem="{Binding Produto}"
                            TextColor="Black">
                            <Picker.ItemDisplayBinding>
                                <Binding Path="Nome" />
                            </Picker.ItemDisplayBinding>
                        </Picker>
                    </Frame>

                    <Frame
                        Margin="0,0,0,10"
                        Padding="0"
                        CornerRadius="2">
                        <Entry
                            x:Name="QtdProdutosResultantesEntry"
                            BackgroundColor="White"
                            Keyboard="Numeric"
                            Placeholder="Produtos resultantes"
                            PlaceholderColor="grey"
                            Text="{Binding QtdProdutosResultantes}"
                            TextColor="Black" />
                    </Frame>

                    <Frame
                        x:Name="ProdutoFrame"
                        Margin="0,0,0,20"
                        Style="{StaticResource FrameCardStyle}">
                        <StackLayout Padding="10" Spacing="5">
                            <Label
                                FontAttributes="Bold"
                                FontSize="16"
                                HorizontalOptions="Start"
                                Text="Produto Selecionado"
                                TextColor="grey" />
                            <StackLayout
                                Margin="0,0,0,10"
                                Padding="10"
                                Orientation="Horizontal">
                                <Frame
                                    Padding="0"
                                    BorderColor="White"
                                    CornerRadius="50"
                                    HeightRequest="60"
                                    WidthRequest="60">
                                    <Image
                                        x:Name="FotoProduto"
                                        Aspect="Fill"
                                        HeightRequest="60"
                                        SemanticProperties.Description="Foto produto" />
                                </Frame>
                                <StackLayout
                                    Margin="10,0,0,0"
                                    HorizontalOptions="FillAndExpand"
                                    Spacing="5">
                                    <Label
                                        x:Name="NomeProdutoLabel"
                                        FontAttributes="Bold"
                                        FontSize="Medium"
                                        HorizontalOptions="Start" />
                                    <Label
                                        x:Name="DescricaoProdutoLabel"
                                        FontAttributes="Italic"
                                        FontSize="13"
                                        HorizontalOptions="Start" />
                                </StackLayout>
                            </StackLayout>
                        </StackLayout>
                    </Frame>

                    <Frame
                        Padding="0"
                        BackgroundColor="Transparent"
                        BorderColor="Transparent">
                        <StackLayout>
                            <Label
                                FontAttributes="Bold"
                                FontSize="18"
                                HorizontalOptions="Start"
                                Text="Listagem de itens"
                                TextColor="grey" />

                            <CollectionView x:Name="ItemsCollection">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Frame Margin="0,10,0,0" Style="{StaticResource FrameCardStyle}">
                                            <StackLayout Padding="10">
                                                <StackLayout Padding="10" Orientation="Horizontal">
                                                    <StackLayout
                                                        Margin="10,0,0,0"
                                                        HorizontalOptions="FillAndExpand"
                                                        Spacing="5">
                                                        <Label
                                                            FontAttributes="Bold"
                                                            FontSize="16"
                                                            HorizontalOptions="Start"
                                                            Text="{Binding NomeItem}" />
                                                    </StackLayout>
                                                    <StackLayout
                                                        Margin="10,0,0,0"
                                                        HorizontalOptions="FillAndExpand"
                                                        Orientation="Horizontal"
                                                        Spacing="5">
                                                        <Frame
                                                            Padding="0"
                                                            HasShadow="True"
                                                            HeightRequest="30"
                                                            HorizontalOptions="Center"
                                                            WidthRequest="30">
                                                            <Button
                                                                Padding="0"
                                                                BackgroundColor="White"
                                                                Clicked="DiminuirQtd"
                                                                CornerRadius="10"
                                                                FontAttributes="Bold"
                                                                FontSize="18"
                                                                HorizontalOptions="Center"
                                                                Text="-"
                                                                TextColor="red"
                                                                VerticalOptions="Center" />
                                                        </Frame>

                                                        <Border
                                                            HeightRequest="30"
                                                            Stroke="Grey"
                                                            StrokeThickness="1"
                                                            WidthRequest="30">
                                                            <Entry
                                                                Margin="0"
                                                                BackgroundColor="White"
                                                                FontSize="14"
                                                                HeightRequest="40"
                                                                HorizontalTextAlignment="Center"
                                                                Keyboard="Numeric"
                                                                Text="{Binding QtdItem}"
                                                                TextColor="Black"
                                                                Unfocused="Entry_Unfocused" />
                                                        </Border>

                                                        <Frame
                                                            Padding="0"
                                                            HasShadow="True"
                                                            HeightRequest="30"
                                                            HorizontalOptions="Center"
                                                            WidthRequest="30">
                                                            <Button
                                                                Padding="0"
                                                                BackgroundColor="White"
                                                                Clicked="AumentarQtd"
                                                                CornerRadius="10"
                                                                FontAttributes="Bold"
                                                                FontSize="18"
                                                                HorizontalOptions="Center"
                                                                Text="+"
                                                                TextColor="red"
                                                                VerticalOptions="Center" />
                                                        </Frame>
                                                    </StackLayout>
                                                    <Frame
                                                        Padding="0"
                                                        BackgroundColor="Transparent"
                                                        BorderColor="Transparent"
                                                        HeightRequest="25"
                                                        HorizontalOptions="Center"
                                                        WidthRequest="25">
                                                        <Button
                                                            Margin="0,0,0,0"
                                                            Padding="0"
                                                            BackgroundColor="#FFFFFF"
                                                            BorderWidth="1"
                                                            Clicked="RemoverItemClicked"
                                                            FontAttributes="Bold"
                                                            HeightRequest="20"
                                                            HorizontalOptions="Center"
                                                            ImageSource="delete.png"
                                                            TextColor="#FFFFFF" />
                                                    </Frame>
                                                </StackLayout>

                                            </StackLayout>
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>

                            <Button
                                Margin="0,10,0,0"
                                BackgroundColor="#FFFFFF"
                                BorderColor="#FF0F10"
                                BorderWidth="1"
                                Clicked="AdicionarItemClicked"
                                FontAttributes="Bold"
                                HorizontalOptions="FillAndExpand"
                                Text="+"
                                TextColor="#FF0F10" />

                        </StackLayout>
                    </Frame>
                    <Button
                        x:Name="ExcluirBtn"
                        Margin="0,10,0,0"
                        BackgroundColor="#FFFFFF"
                        BorderColor="#FF0F10"
                        BorderWidth="1"
                        Clicked="ExcluirClicked"
                        FontAttributes="Bold"
                        HorizontalOptions="FillAndExpand"
                        Text="Excluir"
                        TextColor="#FF0F10" />
                    <Button
                        Margin="0,10,0,0"
                        BackgroundColor="#FF0F10"
                        Clicked="SalvarClicked"
                        FontAttributes="Bold"
                        HorizontalOptions="FillAndExpand"
                        Text="Salvar" />
                </StackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
